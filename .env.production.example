# Production Environment Configuration
# Copy this to .env and update with your actual values

APP_NAME="Metrix Events"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=metrix_events
DB_USERNAME=metrix_user
DB_PASSWORD=your_secure_database_password_here

# Broadcasting (if using real-time features)
BROADCAST_DRIVER=log

# Cache Configuration (redis recommended for production)
CACHE_DRIVER=redis
FILESYSTEM_DISK=local

# Queue Configuration - CRITICAL for event automation
# Options: database, redis (redis recommended)
QUEUE_CONNECTION=redis

# Redis Configuration (if using redis for cache/queue)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (if using for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=yourdomain.com

# Frontend URL (if separate)
FRONTEND_URL=https://yourdomain.com

# Application Specific Settings
EVENT_AUTO_CHECKOUT_GRACE_PERIOD_HOURS=1
EVENT_DEFAULT_BONUS_POINTS=100
LEADER_DEFAULT_BONUS_POINTS=25
